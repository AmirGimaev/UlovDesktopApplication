<Page x:Class="UlovDesktopApplication.Pages.SingInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UlovDesktopApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="SingInPage">

    <Grid>
        <TextBlock Margin="10,120,10,0" TextWrapping="Wrap" Text="Авторизация" VerticalAlignment="Top" TextAlignment="Center" FontSize="35"/>
        <TextBlock Margin="0,191,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" TextAlignment="Center"/>
        <TextBox Margin="220,212,220,0" TextWrapping="Wrap" Height="25" VerticalAlignment="Top" x:Name="LoginTextBox"/>
        <TextBlock Margin="0,252,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" TextAlignment="Center"/>
        <PasswordBox Margin="220,273,220,0" VerticalAlignment="Top" Height="25" x:Name="PasswordTextBox"/>
        <Button Content="Авторизоваться" x:Name="SingInButton" Margin="220,0,220,60" VerticalAlignment="Bottom" Height="25" Click="SingIn"/>
        <Button Content="Войти как гость" x:Name="SingInAsGuestButton" Margin="220,0,220,25" VerticalAlignment="Bottom" Height="25" Click="SingInAsGuest"/>

    </Grid>
</Page>
